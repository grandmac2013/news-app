<h1 class="text-center">Top News</h1>
<%= render 'news' %>
<br>
<h4 class="text-center"><%= link_to "All News", all_news_path %></h4>
<h1 class="text-center">Api News</h1>
<div class="container">
  <div class ="row">
    <% @api_news&.each_with_index do |response, news_key| %>
      <div class="card col-lg-4 col-md-6 col-sm-12 article">

        <span
          data-url="<%= response['url'] %>"
          class="article-title"
          id="article-<%= news_key %>"
          title="<%= response['title']%>"
          style="font-weight: bold;"
        >
            <%= response['title'] %>
        </span>

        <span><%= response['source']['name'] %></span>
        <%= image_tag(response['urlToImage'] || @image, class: 'card-img-top') %>
        <div class="card-body">
          <h5 class="card-title"><% response['title'] %></h5>
          <p class="card-text"> <%= response['description'] %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
